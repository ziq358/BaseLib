<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/open_blue_tooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开蓝牙" />

            <Button
                android:id="@+id/open_blue_tooth_intent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开蓝牙intent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/search_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索" />

            <Button
                android:id="@+id/search_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止搜索" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_result"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择设备：" />

        <TextView
            android:id="@+id/tv_selected_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/connect_a2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a2dp连接" />

            <Button
                android:id="@+id/disconnect_a2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="断开a2dp连接" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>